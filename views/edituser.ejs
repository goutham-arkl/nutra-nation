
<%-include('partials/admin-header')-%>


<div class="container">
    
<div class="row">
    <div class="col">
        <section>
            <div class="mt-3">

                <form action="/admin/update-user?id=<%=user._id%>" id="form"  method="post">
                    <!-- Name input -->
                    <div class="form-outline mb-4">
                      <input type="text" id="form4Example1" name="name" value="<%=user.name%>" class="form-control" />
                      <label class="form-label" for="form4Example1" >Name</label>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="text" id="form4Example1" name="username" value="<%=user.username%>" class="form-control" />
                        <label class="form-label" for="form4Example1">username</label>
                      </div>

                      <div class="form-outline mb-4">
                        <input type="text" id="form4Example1" name="email" value="<%=user.email%>" class="form-control" />
                        <label class="form-label" for="form4Example1">Email</label>
                      </div>
                      
                    <div class="form-outline mb-4">
                        <input type="number" id="form4Example1" name="phone" value="<%=user.phone%>" class="form-control" />
                        <label class="form-label" for="form4Example1">phone</label>
                      </div>

                     

                    
                   
                  
                  
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-dark btn-block mb-4">Add user</button>
                  </form>
               
        
            </div>
        </section>
    </div>
</div>
</div>

<script> jQuery('#form').validate({
    rules:{
      name:'required',
      username:'required',
      email:'required',
      phone:'required',
      
     
     
      

    },messages:{
      name:'Please enter your name',
      username:'Please Enter Your Username',
      email:'Please Enter Your Email address',
      phone:'Please Enter Your Phone number',
      
      
      
     


    },submitHandler:function(form){
      form.submit();
    }
  })
  </script>

