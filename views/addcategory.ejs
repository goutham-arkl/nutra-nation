
<%-include('partials/admin-header')-%>


<div class="container">
    
<div class="row">
    <div class="col">
        <section>
            <div class="mt-3">

                <form action="/admin/add-category" enctype="multipart/form-data" id="form" method="post">
                    <!-- Name input -->
                    <div class="form-outline mb-4">
                      <input type="text" id="form4Example1" name="name" class="form-control" />
                      <label class="form-label" for="form4Example1">Name</label>
                    </div>

                    
                    <!-- Message input -->
                    <div class="form-outline mb-4">
                        <textarea class="form-control" name="description" id="form4Example3" rows="4"></textarea>
                        <label class="form-label" for="form4Example3">Description</label>
                      </div>
              
                  
                    <div class="custom-file">
                        <label>Choose the image</label>
                      <input type="file" class="custom-file-input" id="validatedCustomFile" name="image" required>
                      <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                    
                    </div>
                  
                  
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-dark btn-block mb-4">Add category</button>
                  </form>
               
        
            </div>
        </section>
    </div>
</div>
</div>

<script> jQuery('#form').validate({
  rules:{
    name:'required',
    description:'required',
    image:'required',
    
    
   
   
    

  },messages:{
    name:'Please enter  name',
    description:'Please Enter a description',
    image:'Please choose an image',
   
    
    
    
   


  },submitHandler:function(form){
    form.submit();
  }
})
</script>

