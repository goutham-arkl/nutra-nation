
<%-include('partials/admin-header')-%>


<div class="container">
    
<div class="row">
    <div class="col">
        <section>
            <div class="mt-3">

                <form action="/admin/updateproduct?id=<%=product._id%>" id="form" enctype="multipart/form-data" method="post">

                    

                    <!-- Name input -->
                    <div class="form-outline mb-4">
                      <input type="text" id="form4Example1" name="name" value="<%=product.name%>" class="form-control" />
                      <label class="form-label" for="form4Example1">Name</label>
                    </div>

                    
                    <!-- Message input -->
                    <div class="form-outline mb-4">
                        <textarea class="form-control" name="description"  id="form4Example3" rows="4"><%=product.description%></textarea>
                        <label class="form-label" for="form4Example3">Description</label>
                      </div>


                    <div class="form-outline mb-4">
                        <input type="number" id="form4Example1" name="price" value="<%=product.price%>" class="form-control" />
                        <label class="form-label" for="form4Example1">Price</label>
                      </div>
              
                    <div class="form-group">
                        <select class="custom-select" name="category" value=""  required>
                          <option value="<%=product.category%>" selected><%=product.category%></option>
                          <%for(i=0;i<category.length;i++){%>
                          <option value="<%=category[i].name%>"><%=category[i].name%></option>
                          <%}%>
                         
                        </select>
                     
                      </div>
                  
                    <div class="custom-file">
                        <label>Choose the image</label>
                        <img src="/products/<%=product._id%>.jpg" style="width: 100px; height: auto;" alt="">
                      <input type="file" class="custom-file-input" id="validatedCustomFile" name="image" >
                      <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                    
                    </div>
               
                  
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-dark btn-block mb-4">update Product</button>
                  </form>
               
        
            </div>
        </section>
    </div>
</div>
</div>


<script> jQuery('#form').validate({
  rules:{
    name:'required',
    description:'required',
    price:'required',
    category:'required',
    
   
   
    

  },messages:{
    name:'Please enter valid name',
    description:'Please Enter Your description',
    price:'Please Enter price',
    category:'Please Enter valid category',
    
    
    
   


  },submitHandler:function(form){
    form.submit();
  }
})
</script>

